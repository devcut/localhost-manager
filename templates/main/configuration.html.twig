{% extends 'base.html.twig' %}

{% block main %}

    <section>
        <div class="wrapper">
            <a class="link" href="{{ path('homepage') }}">{{ 'back'|trans }}</a>

            <div class="box">
                {{ form_start(form) }}
                {{ form_row(form.folder) }}
                {{ form_row(form.extension) }}
                {{ form_row(form.exception) }}
                <button class="btn-primary" type="submit">{{ 'form.submit'|trans }}</button>
                {{ form_end(form) }}
            </div>
        </div>
    </section>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('config') }}
{% endblock %}